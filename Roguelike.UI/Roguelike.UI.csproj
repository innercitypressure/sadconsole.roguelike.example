<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="GoRogue" Version="2.6.4" />
      <PackageReference Include="SadConsole" Version="9.2.1" />
      <PackageReference Include="SadConsole.GoRogueHelpers" Version="1.0.1" />
      <PackageReference Include="SadConsole.Host.MonoGame" Version="9.2.1" />
      <PackageReference Include="TheSadRogue.Primitives" Version="1.1.1" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="libSDL2-2.0.0.dylib" />
      <Content Include="libSDL2-2.0.0.dylib">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
